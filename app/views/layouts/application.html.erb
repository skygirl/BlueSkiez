  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Blue Skiez DZ Management</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="active"><a <%= link_to 'Home', home_index_path %></a></li>
        <li class="active"><a <%= link_to 'Contact Us', home_contact_path %></a></li>
        <li class="active"><a <%= link_to 'About Us', home_about_path %></a></li>
        <li class="active"><a <%= link_to 'Customers', customers_path %></a></li>
        <li class="active"><a <%= link_to 'Manifest', manifests_path %></a></li>
        <li class="active"><a <%= link_to 'Daily', dailies_path %></a></li>
      </ul>
    </div>
  </div>
</nav>	
</div>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
